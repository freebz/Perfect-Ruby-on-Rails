<%# 리스트 6-43 login/index.html.erb %>

<p style="color: Red"><%= @error %></p>
<%= form_tag action: :auth do %>
  <div class="field">
    <%= label_tag :username, '사용자 이름' %>: <br />
    <%= text_field_tag :username, '', size: 20 %>
  </div>
  <div class="field">
    <%= label_tag :password, '비밀번호' %>: <br />
    <%= password_field_tag :password, '', size: 20 %>
  </div>
  <!-- 로그인 후에 리다이렉트하는 액션을 숨겨진 필드로 설정 -->
  <%= hidden_field_tag :referer, flash[:referer] %>
  <%= submit_tag '로그인' %>
<% end %>
