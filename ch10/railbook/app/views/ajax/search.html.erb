<%# 리스트 9-18 ajax/search.html.erb %>

<%= form_tag({ action: 'result.json' }, id: 'ajax_form', remote: true) do %>
  <%= select_tag(:publish, options_from_collection_for_select(
    @books, :publish, :publish, '제이펍')) %>
  <%= submit_tag '검색' %>
  <!-- 진행 상태 글자를 표시하기 위한 영역 -->
  <span id="progress"></span>
<% end %>
<!-- 결과를 출력하기 위한 목록 -->
<ul id="result"></ul>
<%= javascript_pack_tag 'ajax' %>
